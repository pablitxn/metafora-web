{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": "airbnb-typescript-prettier",
  "overrides": [
    {
      "files": ["**/utils.ts"],
      "rules": {
        "import/prefer-default-export": "off"
      }
    }
  ],
  "rules": {
    "no-plusplus": "off",
    "react/react-in-jsx-scope": "off",
    "import/no-unresolved": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".tsx"],
        "paths": ["."]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
